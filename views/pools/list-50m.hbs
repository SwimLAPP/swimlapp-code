<header>
    <div class="container text-center">
        <div class="row">
            <div class="col-12">
<h1>List of 50m Swimming Pools</h1>
</div>
</div>
</div>
</header>
<div class="row">
{{#each allPools}}
<div class="col-4">
    <div class="container text-center">
        <div class="card">
            <img src="/public/images/swimpoolgold.jpeg" class="card-img-top" alt="50m pool" />
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">
                    Location:
                    {{this.location.address}},
                    {{this.location.postalCode}},
                    {{this.location.city}}
                    <br />
                    Pool size:
                    {{this.poolSize}}
                    <br />
                    Rating:
                    {{this.rating}}
                    <br />
                </p>

<div class="d-flex justify-content-center">
            <form action="/pools/{{this._id}}" method="GET">
                <button type="submit" class="btn btn-primary">More details</button>
            </form>
            {{!-- <form action="/pools/{{this._id}}/edit" method="GET">
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
            <form action="/pools/{{this._id}}/delete" method="POST">
                <input type="submit" value="Delete" class="btn btn-primary">
            </form> --}}
</div>
</div>
</div>
</div>
</div>
{{/each}}
</div>


</div>


