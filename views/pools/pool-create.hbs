<h1>Add a New Favourite Sports Pool</h1>


<form method="post" action="/pools/create">

    <div class="mb-3">
  <label for="name" class="form-label">Name</label>
  <input type="text" id="name" name="name" placeholder="Name of swimming pool....">
  <br>
  <label for="address" class="form-label">Address</label>
  <input type="text" id="address" name="address" placeholder="Address">
  <br>
  <label for="postalCode" class="form-label">Postal Code</label>
  <input type="text" id="postalCode" name="postalCode" placeholder="Postal Code">
  <br>
  <label for="city" class="form-label">City</label>
  <input type="text" id="city" name="city" placeholder="City">
  <br>
  <label for="poolSize">Available pool size</label>
        <select name="poolSize" id="poolSize">
            <option value="25m">25m</option>
            <option value="50m">50m</option>
            <option value="both">Both 25m and 50m</option>
        </select>

</div>
<div class="mb-3">
  <label for="description" class="form-label">Description</label>
  <textarea class="form-control" id="description" name="description" rows="3"></textarea>
  <label> Rating:
            <input type="number" id="rate" name="rate" min="1" max="10" />
        </label>
</div>
<button type="submit"> Create </button>
</form>


